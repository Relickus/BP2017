<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<AnchorPane id="AnchorPane" prefHeight="700.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.Controllers.SolverSettingsController">
   <children>
      <BorderPane prefHeight="700.0" prefWidth="500.0">
         <center>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <Label text="Aplicable solvers and parameters:" />
                  <TreeView fx:id="treeView" />
               </children>
            </VBox>
         </center>
         <bottom>
            <HBox minWidth="-Infinity" BorderPane.alignment="BOTTOM_CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#onBackClicked" text="Back" />
                  <HBox HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#onProceedClicked" text="Proceed" />
               </children>
            </HBox>
         </bottom>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <top>
            <WebView fx:id="captchaView" maxHeight="380.0" maxWidth="300.0" minHeight="380.0" minWidth="300.0" prefHeight="380.0" prefWidth="300.0" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="20.0" />
               </BorderPane.margin>
            </WebView>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
